<br>
<ol class="breadcrumb">
  <li><%= link_to t('navigation.links.home') , root_path %></li>
  <li><%= link_to t('titles.countries'), countries_path %></li>

  <% if @country %>
      <li><%= link_to @country.country_name , country_realties_path(@country) %></li>
  <% end %>
  <li><%= link_to @realty.title , realty_path(@realty) %></li>
</ol>
<h2><%= @realty.title %></h2>
<%= @realty.description.html_safe if @realty.description %>
<% if user_signed_in? %>
  <p>
    <%= link_to t('btns.show'), @realty, class: 'btn btn-default btn-xs' %>
    <%= link_to t('btns.edit'), edit_realty_path(@realty), class: 'btn btn-default btn-xs' %>
    <%= link_to t('btns.destroy'), @realty, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
<div class="popup-gallery">
  <% if @realty.photo_album.present?  %>
      <h3><%= @realty.photo_album.title %></h3>
      <% @realty.photo_album.photos.each_with_index do |photo, index| %>
          <div class="pull-left">
            <div>
              <a class="original-image" title="Image Caption" href="<%= photo.url %>">
                <%= image_tag photo.thumb.url,
                              class: 'img-responsive img-thumbnail',
                              alt: photo.filename,
                              data: { toggle: 'lightbox',
                                      gallery: @realty.photo_album.id,
                                      type: 'image',
                                      remote: photo.url }%>
              </a>
            </div>
            <% if user_signed_in? %>
              <div>
                <%= link_to "Delete", photo_album_photo_path(@realty.photo_album, index),
                            method: :delete,
                            class: 'btn btn-danger',
                            data: { confirm: "Are you sure you want to delete this image?" } %>
              </div>
            <% end %>
          </div>
      <% end %>
  <% end %>
  <div class="clearfix"></div>
</div>
<br>
<br>


<% if user_signed_in? %>
  <%= link_to t('btns.edit'), edit_realty_path(@realty), class: 'btn btn-default' %> |
<% end %>
<% if @country %>
    <%= link_to t('btns.back'), country_realties_path(@country), class: 'btn btn-default' %>
<% else %>
  <%= link_to t('btns.back'), realties_path, class: 'btn btn-default' %>
<% end %>
