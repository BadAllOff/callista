<div class="col-sm-6 col-md-4">
  <div class="thumbnail service-thumbnail">
    <img src="<%= service.preview_img.url(:original) if service.preview_img.present? %>" alt="<%= service.title %></h3>
          <%= service.title %>" class="img-responsive">
    <div class="caption">
      <%= link_to service do %>
        <h3><%= service.title %></h3>
      <% end %>
      <div class="service-thumbnail-preview">
        <%= service.preview.html_safe if service.preview %>
      </div>
      <p>
        <%= link_to 'View details Â»', service, class: "btn btn-lg btn-default"  %>
      </p>
      <p>
        <%= link_to 'Show', service, class: 'btn btn-xs btn-default' %>
        <%= link_to 'Edit', edit_service_path(service), class: 'btn btn-xs btn-default' %>
        <%= link_to 'Destroy', service, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
  </div>
</div>