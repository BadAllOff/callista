<p id="notice"><%= notice %></p>

<h1>Jumbotrons</h1>

<% @jumbotrons.each do |jumbotron| %>
    <div class="jumbotron">
      <h1><%= jumbotron.head_text %></h1>
      <p class="lead">
        <%= jumbotron.lead_text %>
      </p>
      <p><a class="btn btn-lg btn-success" href="#" style="background-color: <%= jumbotron.btn_color %>;" role="button"> <%= jumbotron.button_text %></a></p>
    </div>
    <%= link_to 'Show', jumbotron %>
    <%= link_to 'Edit', edit_jumbotron_path(jumbotron) %>
    <%= link_to 'Destroy', jumbotron, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<br>

<%= link_to 'New Jumbotron', new_jumbotron_path, class: 'btn btn-primary' %>
