<h1><%= t'titles.photos' %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photo_albums.each do |photo_album| %>
      <tr>
        <td><%= photo_album.title %></td>
        <td><%= link_to t('btns.show'), photo_album %></td>
        <td><%= link_to t('btns.edit'), edit_photo_album_path(photo_album) %></td>
        <td><%= link_to t('btns.destroy'), photo_album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo Album', new_photo_album_path %>
