<%= link_to 'Destroy', @photo_album, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
<p>
  <strong>Title:</strong>
  <%= @photo_album.title %>
</p>

<%= form_for @photo_album, url: photo_album_photos_path(@photo_album), method: :post do |f| %>
    <div class="form-group">
      <%= f.label :photos %>
      <%= f.file_field :photos, multiple: true %>
    </div>
    <div class="actions">
      <%= f.submit 'Add more images', class: 'btn btn-primary' %>
    </div>
<% end %>


<div>
  <% @photo_album.photos.each_slice(4) do |photos| %>
      <div>
        <% photos.each_with_index do |photo, index| %>
          <div class="pull-left">
            <div>
              <%= image_tag photo.thumb.url,
                            class: 'img-responsive img-thumbnail',
                            alt: 'Alt text',
                            data: { toggle: 'lightbox',
                                    gallery: @photo_album.id,
                                    type: 'image',
                                    remote: photo.url }%>
            </div>

            <div>
              <%= link_to "Delete", photo_album_photo_path(@photo_album, index),
                          method: :delete,
                          class: 'btn btn-danger',
                          data: { confirm: "Are you sure you want to delete this image?" } %>
            </div>
          </div>
      <% end %>
      </div>
      <p class="clearfix"></p>
  <% end %>
</div>

<%= link_to 'Edit', edit_photo_album_path(@photo_album) %> |
<%= link_to 'Back', photo_albums_path %>
