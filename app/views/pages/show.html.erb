<h1><%= @page.title %></h1>

<% if @page.jumbotron.present? %>
    <%= render partial: 'jumbotrons/jumbotron', locals: { jumbotron:  @page.jumbotron } %>
<% end %>

<div>
  <%= @page.description.html_safe %>
</div>
<% if user_signed_in? %>
<%= link_to t('btns.edit'), edit_page_path(@page), class: 'btn btn-warning' %> |
<%= link_to t('btns.back'), pages_path, class: 'btn btn-default' %>
<% end %>