<p id="notice"><%= notice %></p>

<h1><%= t'titles.pages' %></h1>
<%= link_to 'New Page', new_page_path, class: 'btn btn-default' %>


<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= link_to 'Show', page, class: 'btn btn-xs btn-default'  %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-xs btn-default'  %></td>
        <td><%= link_to 'Destroy', page, class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

