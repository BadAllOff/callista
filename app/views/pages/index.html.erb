<h1><%= t'titles.pages' %></h1>
<!--<%= link_to 'New Page', new_page_path, class: 'btn btn-default' %>-->


<table class="table table-responsive table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= link_to t('btns.show'), page, class: 'btn btn-xs btn-default'  %></td>
        <td><%= link_to t('btns.edit'), edit_page_path(page), class: 'btn btn-xs btn-warning'  %></td>
        <td>
          <% if (1..2).include? page.id %>
              <span class="text-danger">Нельзя удалять</span>
          <% else %>
            <%= link_to t('btns.destroy'), page, class: 'btn btn-xs btn-danger',
                        method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

