<% if @page %>
  <h1><%= @page.title %></h1>

  <% if @page.jumbotron.present? %>
      <%= render partial: 'jumbotrons/jumbotron', locals: { jumbotron:  @page.jumbotron } %>
  <% end %>

  <div>
    <%= @page.description.html_safe if @page.description %>
  </div>
  <% if user_signed_in? %>
      <%= link_to t('btns.edit'), edit_page_path(@page), class: 'btn btn-warning' %> |
      <%= link_to t('btns.back'), pages_path, class: 'btn btn-default' %>
  <% end %>
<% end %>

<p class="clearfix"></p>

<div class="col-md-6 col-xs-12">
  <%= form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <div class="field form-group">
        <%= f.label :name, t('contacts.name') %>
        <%= f.text_field :name, :required => true, class: "form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :email, t('contacts.email') %>
        <%= f.email_field :email, :required => true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :message, t('contacts.message') %>
        <%= f.text_area :message, :as => :text, :required => true, class: "form-control" %>
      </div>

      <div class= "hidden">
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div class="field form-group">
        <%= f.submit t('btns.contacts.send_message'), :class=> "btn btn-primary btn-lg" %>
      </div>
  <% end %>
</div>
<p class="clearfix"></p>