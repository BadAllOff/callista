<div class="col-sm-6 col-md-4">
  <div class="thumbnail service-thumbnail">
    <% if user_signed_in? %>
        <p>
          <%= link_to t('btns.show'), country, class: 'btn btn-xs btn-default' %>
          <%= link_to t('btns.edit'), edit_country_path(country), class: 'btn btn-xs btn-warning' %>
          <%= link_to t('btns.destroy'), country, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %>
        </p>
    <% end %>
    <img src="<%= country.preview_img.url(:original) if country.preview_img.present? %>" alt="<%= country.country_name %>" class="img-responsive">
    <div class="caption">
      <%= link_to country_realties_path(country) do %>
          <h3><%= country.country_name %></h3>
      <% end %>
      <div class="service-thumbnail-preview">
        <%= country.description.html_safe if country.description %>
      </div>
      <br>
      <p>
        <%= link_to t('realty_countries.show_realties')+' Â»', country_realties_path(country), class: 'btn btn-lg btn-default', style: 'bottom: 34px; position: absolute;'  %>
      </p>
    </div>
  </div>
</div>