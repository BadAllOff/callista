<% if current_user %>
  <div class="row sidebar-row">
    <div class="col-sm-4 col-md-3 sidebar">
      <div class="mini-submenu">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </div>
      <div class="list-group">
          <span href="#" class="list-group-item active">
              Admin Menu
              <span class="pull-right" id="slide-submenu">
                  <i class="fa fa-times"></i>
              </span>
          </span>

        <%= active_link_to realties_path, :active => :inclusive, class: 'list-group-item' do %>
          <i class="fa fa-home"></i> <%= t('navigation.links.only_realty') %>
        <% end %>
        <%= active_link_to photo_albums_path, :active => :inclusive, class: 'list-group-item' do %>
          <i class="fa fa-camera-retro"></i> <%= t('navigation.links.photos') %>
        <% end %>
        <%= active_link_to pages_path, :active => :inclusive, class: 'list-group-item' do %>
          <i class="fa fa-folder-open"></i> <%= t('navigation.links.pages') %>
        <% end %>
        <%= active_link_to jumbotrons_path, :active => :inclusive, class: 'list-group-item' do %>
          <i class="fa fa-file-image-o"></i> <%= t('navigation.links.jumbotrons') %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>